#!/bin/bash

Z="$(printf '\033[0m')"
r="$(printf '\033[0;31m')"
R="$(printf '\033[1;31m')"
g="$(printf '\033[0;32m')"
G="$(printf '\033[1;32m')"
y="$(printf '\033[0;33m')"
Y="$(printf '\033[1;33m')"
W="$(printf '\033[1;37m')"
c="$(printf '\033[0;36m')"
C="$(printf '\033[1;36m')"

clear

for pack in dialog tigervnc-standalone-server tigervnc-common ; do
	echo -e "
${R} [${W}-${R}]${G} Installing package : ${Y}$pack${Z}
"
	sudo apt install $pack -y --no-install-recommends
done

echo -e "
 ${Y}Enter Your Password & Confirmed it Once then type ${R}n${Z}
"
vncserver

vncserver -kill :*
rm -rf $HOME/.vnc/localhost:*.pid
rm -rf /tmp/.X1-lock
rm -rf /tmp/.X11-unix/X1
    
vncserver -kill :*
rm -rf $HOME/.vnc/localhost:*.pid
rm -rf /tmp/.X1-lock
rm -rf /tmp/.X11-unix/X1
    
echo "export DISPLAY=":1"" >> /etc/profile
echo "export PULSE_SERVER=127.0.0.1" >> /etc/profile

cp -rf vnc /usr/local/bin/vnc
echo -e "
 ${c}vnc ${y}copied to ${c}/usr/local/bin/vnc
"

chmod +x /usr/local/bin/vnc
echo -e "
 ${g}Executable ${r}Permission ${y}is set to ${c}/usr/local/bin/vnc
"

bash progress 2

echo -e "
 ${c}VNC Server ${y}Installed.

 Use ${C}vnc ${g}command to run ${y}VNC Server.${Z}

"
